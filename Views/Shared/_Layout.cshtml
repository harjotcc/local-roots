<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LocalRoots - @ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/local_roots.styles.css" asp-append-version="true" />
    <style>

        @* FOOTER *@

        .lr-footer {
            background: #18181b;
            color: #fafafa;
            padding: 2rem 0;
            margin-top: 3rem;
        }
        .lr-footer-container {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 2rem;
        }
        .lr-footer h2 {
            color: #42D3B9;
        }
        .lr-footer h4 {
            margin-bottom: 0.5rem;
        }
        .lr-footer ul {
            list-style: none;
            padding: 0;
        }
        .lr-footer a {
            color: #fafafa;
            text-decoration: none;
            transition: color 0.2s;
        }
        .lr-footer a:hover {
            color: #38bdf8;
        }
        .lr-footer .lr-social-links {
            display: flex;
            gap: 1rem;
        }
        .lr-footer .lr-social-links a {
            color: #38bdf8;
        }
        .lr-footer-desc {
            max-width: 300px;
        }
        .lr-footer-copyright {
            border-top: 1px solid #27272a;
            margin-top: 2rem;
            padding-top: 1rem;
            text-align: center;
            font-size: 0.9rem;
            color: #a1a1aa;
        }



        @* SEARCH BAR *@
        .navbar-search {
            width: 450px;
            max-width: 100%;
            margin: 0 auto;
        }
        .search-group {
            display: flex;
            align-items: stretch;
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(60,60,60,0.08);
            background: #fff;
        }
        .search-group select, .search-group input {
            border: none;
            outline: none;
            box-shadow: none;
            background: transparent;
        }
        .search-group select {
            padding: 0 1rem;
            background: #f3f4f6;
            color: #333;
            border-right: 1px solid #e5e7eb;
            font-size: 1rem;
            border-radius: 0;
            height: 2.2rem; /* Reduced height */
        }
        .search-group input[type="search"] {
            flex: 1;
            padding: 0.4rem 1rem; /* Reduced vertical padding */
            font-size: 1rem;
            background: transparent;
            border-radius: 0;
            height: 2.2rem; /* Reduced height */
        }
        .search-group button {
            background: #42D3B9;
            color: #fff;
            border: none;
            padding: 0 1.2rem;
            font-size: 1rem;
            border-radius: 0;
            transition: background 0.2s;
            display: flex;
            align-items: center;
            height: 2.2rem; /* Reduced height */
        }
        .search-group button:hover {
            background: #38bdf8;
        }
        @@media (max-width: 576px) {
            .navbar-search {
                width: 100%;
            }
            .search-group input[type="search"] {
                padding: 0.3rem 0.5rem;
            }
            .search-group button {
                padding: 0 1rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LocalRoots</a>
               
               
                <form class="navbar-search" role="search" method="get" action="/search">
                    <div class="search-group">
                        <select name="type" aria-label="Filter by type">
                            <option value="">All</option>
                            <option value="product">Product</option>
                            <option value="category">Category</option>
                            <option value="brand">Brand</option>
                        </select>
                        <input class="form-control" type="search" placeholder="Search..." aria-label="Search" name="q">
                        <button type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                    d="M21 21l-4.35-4.35m1.35-5.15a7 7 0 11-14 0 7 7 0 0114 0z"/>
                            </svg>
                        </button>
                    </div>
               
                </form>
         
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="lr-footer">
        <div class="lr-footer-container">
            <div>
                <h2>LocalRoots</h2>
                <p class="lr-footer-desc">
                    Your trusted marketplace for fresh, local, and sustainable products. Shop with confidence and support your community!
                </p>
            </div>
            <div>
                <h4>Quick Links</h4>
                <ul>
                    <li><a asp-controller="Shop" asp-action="Index">Shop</a></li>
                    <li><a asp-controller="About" asp-action="Index">About Us</a></li>
                    <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                </ul>
            </div>
            <div>
                <h4>Legal</h4>
                <ul>
                    <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                    <li><a asp-controller="Terms" asp-action="Index">Terms & Conditions</a></li>
                    <li><a asp-controller="Returns" asp-action="Index">Returns & Refunds</a></li>
                </ul>
            </div>
            <div>
                <h4>Follow Us</h4>
                <div class="lr-social-links">
                    <a href="https://facebook.com" target="_blank">Facebook</a>
                    <a href="https://instagram.com" target="_blank">Instagram</a>
                    <a href="https://twitter.com" target="_blank">Twitter</a>
                </div>
            </div>
        </div>
        <div class="lr-footer-copyright">
            &copy; @DateTime.Now.Year Local Roots. All rights reserved.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
