@{
    var role = Context.Session.GetString("Role");
    var userId = Context.Session.GetString("UserId");
    var routeData = Context.GetRouteData();
    var currentController = routeData.Values["controller"]?.ToString();
    var currentAction = routeData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LocalRoots - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/local_roots.styles.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        main {
            flex: 1;
        }

        .lr-footer {
            background: #18181b;
            color: #fafafa;
            padding: 2rem 1rem;
        }
        .lr-footer-container {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 2rem;
        }
        .lr-footer h2 {
            color: #42D3B9;
        }
        .lr-footer h4 {
            margin-bottom: 0.5rem;
        }
        .lr-footer ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .lr-footer a {
            color: #fafafa;
            text-decoration: none;
            transition: color 0.2s ease;
        }
        .lr-footer a:hover {
            color: #38bdf8;
        }
        .lr-social-links {
            display: flex;
            gap: 1rem;
        }
        .lr-footer-desc {
            max-width: 300px;
            font-size: 0.95rem;
            line-height: 1.4;
        }
        .lr-footer-copyright {
            border-top: 1px solid #27272a;
            margin-top: 2rem;
            padding-top: 1rem;
            text-align: center;
            font-size: 0.85rem;
            color: #a1a1aa;
        }

        .navbar-search {
            width: 450px;
            max-width: 100%;
            margin: 0 auto;
        }
        .search-group {
            display: flex;
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(60,60,60,0.08);
            background: #fff;
        }
        .search-group select,
        .search-group input,
        .search-group button {
            border: none;
            outline: none;
            background: transparent;
            height: 2.2rem;
        }
        .search-group select {
            padding: 0 1rem;
            background: #f3f4f6;
            color: #333;
            border-right: 1px solid #e5e7eb;
            font-size: 1rem;
        }
        .search-group input[type="search"] {
            flex: 1;
            padding: 0.4rem 1rem;
            font-size: 1rem;
        }
        .search-group button {
            background: #42D3B9;
            color: #fff;
            padding: 0 1.2rem;
            transition: background 0.2s;
            display: flex;
            align-items: center;
        }
        .search-group button:hover {
            background: #38bdf8;
        }

        @@media (max-width: 576px) {
            .navbar-search {
                width: 100%;
            }
            .search-group input[type="search"] {
                padding: 0.3rem 0.5rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LocalRoots</a>

                @if ((role == "Customer" || role == "Vendor" || role == "Admin") 
                        && !string.IsNullOrEmpty(userId)
                        && !(currentController == "Home" && currentAction == "Continue"))
                    {
                        <span class="text-muted ms-3">Signed in as <strong>User @userId</strong></span>
                    }

                @if (role == "Customer")
                {

                    //search bar start

            <form class="navbar-search" role="search" method="get" asp-controller="Product" asp-action="Search">
  <div class="search-group">
    <select name="type" aria-label="Filter by type">
      <option value="">All</option>
      <option value="product">Product</option>
      <option value="category">Category</option>
      <option value="seller">Seller</option>
    </select>
    <input
      class="form-control"
      type="search"
      placeholder="Search..."
      aria-label="Search"
      name="q"
      required
    />
    <button type="submit">Search</button>
  </div>
</form>


                      
                    //search bar end

                    <a asp-controller="Customer" asp-action="Orders" class="btn btn-outline-primary ms-3">  Orders  </a>
                    <a asp-controller="Customer" asp-action="Cart" class="btn btn-outline-primary ms-3">  Cart  </a>

                }
                 @if (role == "Customer" || role == "Vendor" || role == "Admin")
                {
                    <a asp-controller="Home" asp-action="Logout" class="btn btn-outline-primary ms-3">  Logout  </a>
                }
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3 container">
        @RenderBody()
    </main>

    <footer class="lr-footer">
        <div class="lr-footer-container">
            <div>
                <h2>LocalRoots</h2>
                <p class="lr-footer-desc">
                    Your trusted marketplace for fresh, local, and sustainable products. Shop with confidence and support your community!
                </p>
            </div>
            <div>
                <h4>Quick Links</h4>
                <ul>
                    <li><a asp-controller="Shop" asp-action="Index">Shop</a></li>
                    <li><a asp-controller="About" asp-action="Index">About Us</a></li>
                    <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                </ul>
            </div>
            <div>
                <h4>Legal</h4>
                <ul>
                    <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                    <li><a asp-controller="Terms" asp-action="Index">Terms & Conditions</a></li>
                    <li><a asp-controller="Returns" asp-action="Index">Returns & Refunds</a></li>
                </ul>
            </div>
            <div>
                <h4>Follow Us</h4>
                <div class="lr-social-links">
                    <a href="https://facebook.com" target="_blank">Facebook</a>
                    <a href="https://instagram.com" target="_blank">Instagram</a>
                    <a href="https://twitter.com" target="_blank">Twitter</a>
                </div>
            </div>
        </div>
        <div class="lr-footer-copyright">
            &copy; @DateTime.Now.Year Local Roots. All rights reserved.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
