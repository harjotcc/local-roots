@model local_roots.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<h2 class="mb-4">Edit Product</h2>
<form method="post" asp-action="EditProduct" class="mx-auto" style="max-width: 500px;">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control rounded-pill" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control rounded-pill" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control rounded-pill" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Count" class="form-label"></label>
        <input asp-for="Count" class="form-control rounded-pill" />
        <span asp-validation-for="Count" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="VendorId" />
    <input type="hidden" asp-for="Rating" />
    <input type="hidden" asp-for="NumRaters" />
    
    <button type="submit" class="btn btn-primary w-100 rounded-pill py-2">Save Changes</button>
</form>

