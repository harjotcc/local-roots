@model local_roots.Models.Product

@{
    ViewData["Title"] = "Product Details";

    var reviews = Model.Reviews ?? new List<local_roots.Models.Review>();
    double averageRating = reviews.Count > 0 ? reviews.Average(r => r.Rating) : 0;
    int reviewsCount = reviews.Count;
}

<style>
    .product-details-card {
        max-width: 900px;
        border-radius: 1.5rem;
        overflow: hidden;
    }

    .product-image-container {
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .product-image {
        max-height: 360px;
        object-fit: cover;
        border-radius: 1rem;
        width: 100%;
    }

    .product-info {
        padding: 2rem;
    }

    .product-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .rating-stars {
        font-size: 1.2rem;
        color: #ffc107;
    }

    .review-link {
        font-size: 0.9rem;
    }

    .price {
        font-size: 1.75rem;
        font-weight: 600;
        color: #28a745;
    }

    .product-actions a {
        min-width: 120px;
    }

    .product-description {
        font-size: 1rem;
        line-height: 1.5;
        color: #555;
    }

    .stock-info {
        font-size: 1.1rem;
        font-weight: 500;
    }
</style>

<div class="container py-4">
    <h2 class="text-center fw-bold mb-5">@Model.Name</h2>

    <div class="card shadow-lg mx-auto product-details-card">
        <div class="row g-0">
            <div class="col-md-6 product-image-container">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="product-image" />
                }
                else
                {
                    <span class="text-muted">No Image Available</span>
                }
            </div>
            <div class="col-md-6 bg-white product-info">
                <div class="product-title">@Model.Name</div>

                <div class="d-flex align-items-center mb-3">
                    <div class="rating-stars">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= (int)averageRating)
                            {
                                <i class="bi bi-star-fill"></i>
                            }
                            else if (i - averageRating < 1)
                            {
                                <i class="bi bi-star-half"></i>
                            }
                            else
                            {
                                <i class="bi bi-star"></i>
                            }
                        }
                    </div>
                    <div class="ms-2 review-link">
                        (<a asp-controller="Product" asp-action="Review" asp-route-id="@Model.Id">@reviewsCount reviews</a>)
                    </div>
                </div>

                <p class="price mb-3">$@Model.Price.ToString("F2")</p>

                <p class="product-description mb-3">
                    <strong>Description:</strong> @Model.Description
                </p>

                <p class="stock-info mb-4">
                    <strong>Stock:</strong>
                    @if (Model.Stock > 10)
                    {
                        <span class="text-success">In stock (@Model.Stock)</span>
                    }
                    else if (Model.Stock > 0)
                    {
                        <span class="text-warning">Only @Model.Stock left!</span>
                    }
                    else
                    {
                        <span class="text-danger">Out of stock (0)</span>
                    }
                </p>

                <div class="product-actions d-flex gap-3">
                    <a asp-action="EditProduct" asp-route-id="@Model.Id" class="btn btn-outline-primary rounded-pill">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="DeleteProduct" asp-route-id="@Model.Id" class="btn btn-outline-danger rounded-pill">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
