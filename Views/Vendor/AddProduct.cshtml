@model local_roots.Models.Product

@{
    ViewData["Title"] = "Add Product";
}

<h2 class="mb-4">Add Product</h2>

<form asp-action="AddProduct" method="post" class="mx-auto" style="max-width: 500px;">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Product Name</label>
        <input asp-for="Name" class="form-control rounded-pill" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control rounded-pill" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

        <div class="mb-3">
        <label asp-for="Category" class="form-label">Category</label>
        <select asp-for="Category" class="form-select rounded-pill">
            <option value="">-- Select Category --</option>
            <option value="Fruits">Fruits</option>
            <option value="Vegetables">Vegetables</option>
            <option value="Dairy">Dairy</option>
            <option value="Grains">Grains</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" class="form-control rounded-pill" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label">Stock Quantity</label>
        <input asp-for="Stock" class="form-control rounded-pill" type="number" min="0" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    @* SellerId should be set in controller, but keep it hidden here *@
    <input type="hidden" asp-for="SellerId" />

    <button type="submit" class="btn btn-success w-100 rounded-pill py-2">
        <i class="bi bi-plus-circle me-2"></i> Add Product
    </button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
