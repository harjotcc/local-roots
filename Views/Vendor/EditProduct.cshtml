@model local_roots.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h2 class="mb-4">Edit Product</h2>
<form method="post" asp-action="EditProduct" class="mx-auto" style="max-width: 500px;">
    <input type="hidden" asp-for="Id" />
    
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Product Name</label>
        <input asp-for="Name" class="form-control rounded-pill" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control rounded-pill" type="number" step="0.01" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" class="form-control rounded-pill" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label">Stock Quantity</label>
        <input asp-for="Stock" class="form-control rounded-pill" type="number" min="0" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label">Category</label>
        <input asp-for="Category" class="form-control rounded-pill" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    @* SellerId should be set server-side; keep hidden *@
    <input type="hidden" asp-for="SellerId" />

    <button type="submit" class="btn btn-primary w-100 rounded-pill py-2">Save Changes</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
